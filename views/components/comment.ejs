<div class="accordion-item">
  <h2 class="accordion-header">
    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#comment<%= comment.comment_id %>" aria-expanded="true" aria-controls="comment<%= comment.comment_id %>">
      <%= comment.first_name %> <%= comment.last_name[0] %>
    </button>
  </h2>
  <div id="comment<%= comment.comment_id %>" class="accordion-collapse collapse show">
    <div class="accordion-body">
      <%= comment.comment %>
    </div>
  </div>
</div>