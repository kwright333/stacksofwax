<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/assets/gui.css" />
    <script
      src="https://kit.fontawesome.com/d1738f8474.js"
      crossorigin="anonymous"
    ></script>
    <script src="/index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <title>Vinyls</title>
  </head>
  <body>
    <!-- Header -->
    <span class="border">
        <div class="header sticky-top">
            
            <nav class="navbar navbar-expand-md">
                <div class="container-fluid">
                    <a class="navbar-logo" href="/">
                        <img src="/assets/SOW_Logo.png" style="width: 3cm; height:2cm;">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarResponsive">
                      <%- include('./nav-buttons', { memberId }) %>
                    </div>
                </div>
            </nav>
            <div class="container-fluid col-2">
                <a href="login.html" class="btn btn-outline-light" role="button">Login/Register</a>
                <i class="fa fa-light fa-user" style="color: #484f5b;"></i>
            </div>
    
            <%- include('./components/search-input') %>
        </div>
        </span>
        
          </div>
        </div>
      </div>
    </span>
    <% if (filtering) { %>
    <div class="row main text-center padding">
      <h1>Our Vinyls</h1>
      <div class="row justify-content-center">
      <div class="dropdown col-2">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
          Genre
        </button>
        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
        <%for (var i = 0; i < genres.length; i++) { %> 
          <li><a class="dropdown-item" href="#" onclick="filterVinylsByGenre('<%= genres[i].genre %>')"><%= genres[i].genre %></a></li>
        <% } %>
          <li><hr class="dropdown-divider"></li>
          <li><a class="dropdown-item" href="/vinyls">Clear</a></li>
        </ul>
      </div>
      <div class="dropdown col-2">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
          Likes
        </button>
        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
          <li><a class="dropdown-item" href="#" onclick="orderVinylsByMostLiked()">Order by most liked</a></li>
          <li><a class="dropdown-item" href="#" onclick="orderVinylsByLeastLiked()">Order by least liked</a></li>
          <li><hr class="dropdown-divider"></li>
          <li><a class="dropdown-item" href="/vinyls">Clear</a></li>
        </ul>
      </div>
      <div class="dropdown col-2">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
          Artist
        </button>
        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
          <%for (var i = 0; i < artists.length; i++) { %> 
            <li><a class="dropdown-item" href="#" onclick="filterVinylsByArtist('<%= artists[i].artist %>')"><%= artists[i].artist %></a></li>
          <% } %>
          <li><hr class="dropdown-divider"></li>
          <li><a class="dropdown-item" href="/vinyls">Clear</a></li>
        </ul>
      </div>
    </div>
    </div>
    <% } %>
    <%- include('./our-vinyls', { vinyls }) %>
  </body>
</html>
