<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/assets/gui.css">
  <script src="https://kit.fontawesome.com/d1738f8474.js" crossorigin="anonymous"></script>
  <script src="/index.js"></script>
  <title>Members</title>
</head>

<body>
  <!-- Header -->
  <span class="border">
    <div class="header sticky-top">

      <nav class="navbar navbar-expand-md">
        <div class="container-fluid">
          <a class="navbar-logo" href="/">
            <img src="/assets/SOW_Logo.png" style="width: 3cm; height:2cm;">
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarResponsive">
            <%- include('./nav-buttons', { memberId: memberDetails.member_id }) %>
          </div>
        </div>
      </nav>
      <div class="container-fluid col-2">
        <a href="login.html" class="btn btn-outline-light" role="button">Login/Register</a>
        <i class="fa fa-light fa-user" style="color: #484f5b;"></i>
      </div>

      <div class="container-fluid col-md-auto">
        <div class="input-group rounded">
          <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
          <span class="input-group-text border-0" id="search-addon">
            <i class="fas fa-magnifying-glass"></i>
          </span>
        </div>
      </div>
    </div>
  </span>

  <div class="container-fluid padding">
    <div class="row main text-center padding">
      <div class="col-6">
        <h2>My Details</h2>
        <br>
        <p>Name : <%= memberDetails.first_name %> <%= memberDetails.last_name %></p>
        <p>Age : <%= memberDetails.age %></p>
        <p>Country : <%= memberDetails.country %></p>
        <p>Gender : <%= memberDetails.gender %></p>

        <div>
          <button type="button" class="btn btn-dark">Add a Collection</button>
        </div>


      </div>
      <div class="col-6">
        <h2>My Collections</h2>
        <%for (var i = 0; i < vinylCollections.length; i++) { %>
        <div class="col">
          <div class="card">
            <img src="https://mdbcdn.b-cdn.net/img/new/standard/city/041.webp" class="card-img-top" alt="Hollywood Sign on The Hill" />
            <div class="card-body">
              <h5 class="card-title"><%= vinylCollections[i].vinyl_collection_name %></h5>
              <p class="card-text">
                <%= vinylCollections[i].description %>
              </p>
              <a href="#" class="btn btn-dark">Edit</a>
            </div>
          </div>
        </div>
        <br>
        <% } %>
      </div>
    </div>
  </div>

</body>

</html>